<!DOCTYPE html>
<html lang="en">
<%- include('./layouts/header') -%>

    <head>
        <!-- Link to CSS file -->
        <link rel="stylesheet" href="/css/styles.css">
    </head>

    <body>
        <!-- Navigation-->
        <%- include('./layouts/navbar') -%>
            <!-- Page Header-->
            <header class="masthead" style="background-image: url('/assets/img/3.jpg')">
                <div class="container position-relative px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="post-heading">
                                <h1>Login</h1>
                                <h2 class="subheading">Book your Drive Test Now</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <main class="mb-4">
                <div class="container px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="my-5">
                                <% if(message){ %>
                                    <span>
                                        <%= message %>
                                    </span>
                                    <% } %>
                                        <form id="contactForm" action="/login/user" method="post">
                                            <div class="form-floating">
                                                <input class="form-control" id="username" name="username"
                                                    autocomplete="username" type="text" placeholder="Enter your name..."
                                                    required />
                                                <label for="username">Username</label>
                                            </div>
                                            <div class="form-floating">
                                                <input class="form-control" id="password" name="password"
                                                    autocomplete="current-password" required type="password"
                                                    placeholder="Enter your email..."
                                                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" />
                                                <label for="password">Password</label>
                                            </div>
                                            <br />

                                            <!-- Submit Button-->
                                            <button class="btn btn-secondary rounded text-uppercase" id="submitButton"
                                                type="submit">Sign
                                                IN</button>
                                        </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <!-- Footer-->
            <%- include('./layouts/footer') -%>
                <!-- Bootstrap core JS-->
                <%- include('./layouts/script') -%>
    </body>

</html>